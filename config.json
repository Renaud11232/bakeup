{
  "before-all": [
    "echo before-all"
  ],
  "backups": [
    {
      "dry-run": true,
      "before": [
        "echo Before"
      ],
      "source": "/",
      "dest": "/media/backup",
      "excludes": [
        "/sbin",
        "/whatever"
      ],
      "includes": [
        "/toinclude/",
        "/another_one"
      ],
      "filters": [
        "+ /home/**",
        "- **"
      ],
      "bwlimit": "50K:5M",
      "backup-dir": "/path/to/your/{{date?%Y-%m-%d}}/backups",
      "checksum": true,
      "additional_arguments": [
        "-v",
        "--progress"
      ],
      "after": [
        "echo after"
      ]
    }
  ],
  "after-all": [
    "echo after-all"
  ]
}